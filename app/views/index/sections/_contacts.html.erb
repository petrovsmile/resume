<a name="contacts" class="js-scroll-section"></a>
<div class="title_section">
    Контакты
</div>

<div class="contact_left">
  <div class="contact_form">
    <div class="contact_form_title">
      Написать мне
    </div>
    <div class="form_thanks">
       Я уже получил сообщение<br> и спешу на него ответить. 
    </div>
    <%= form_with do |form| %>
      <%= form.label :name, 'Имя' %>
      <%= form.text_field :name, placeholder: 'Имя' %>

      <%= form.label :email, 'E-mail' %>
      <%= form.email_field :email, placeholder: 'E-mail' %>

      <%= form.label :message, 'Сообщение' %>
      <%= form.text_area :message, placeholder: 'Сообщение' %>

      <div class="error_form_fields">
        Заполни, пожалуйста, все поля
      </div>
      <%= form.button 'Отправить'%>
    <% end %>
  </div>
</div>
<div class="contact_right">
  <div class="contacts">
    <% @contacts.each do |contact| %>
      <div class="contact">
        <a href="<%=contact_link(contact)%>">
          <div class="contact_icon <%=contact.code%>">
            
          </div>
          <div class="contact_value">
            <%=contact.value.gsub('https://','')%>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
<div class="clear"></div>


<div style="height: 500px"></div>